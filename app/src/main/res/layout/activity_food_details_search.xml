<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="androidhive.info.materialdesign.activity.FoodDetailsActivitySearch.FoodDetailsFragment">

    <TextView
        android:id="@+id/activity_food_details_search_textview_foodsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30dp"
        android:textStyle="italic"
        />
    <TextView
        android:id="@+id/activity_food_details_search_textview_foodsNutrients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/activity_food_details_search_textview_foodsName"
        android:layout_marginTop="10dp"
        android:textColor="@color/textColorPrimary"
        />

    <TextView
        android:id="@+id/activity_food_details_search_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_food_details_search_textview_foodsNutrients"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="italic"
        android:text="These values reflects 100gr portions. If you want different portions, insert here the selected value."
        />

    <EditText
        android:id="@+id/activity_food_details_search_insertPortion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_food_details_search_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="15dp"
        android:hint="Insert portion (gr)..."
        android:background="@color/windowBackground"
        android:textColor="@color/black"
        android:inputType="numberDecimal"
        />
    <Button
        android:id="@+id/activity_food_details_search_addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/activity_food_details_search_insertPortion"
        android:gravity="center"
        android:onClick="addFood"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:text=" Add "
        />

    <Button
        android:id="@+id/activity_food_details_search_tryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_food_details_search_addButton"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:text=" Bottone di prova "
        android:onClick="custom_portion"
        />
</RelativeLayout>
