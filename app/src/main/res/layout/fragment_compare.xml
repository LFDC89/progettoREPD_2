<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dicarlo.fierimonte.infoodrmations.fragments.CompareSearchFragment">

    <TextView
        android:id="@+id/fragment_compare_explanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textColor="@color/textColorPrimary"
        android:text="To compare two foods, select them from this list, clicking on ADD TO COMPARE button."/>

    <EditText
        android:id="@+id/search_compare_edit_text"
        android:hint="Search foods..."
        android:inputType="text"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/fragment_compare_explanation"
        android:textColor="@color/black"
        >
    </EditText>

    <ListView
        android:id = "@+id/listview_compare_foodslist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_compare_edit_text"
        />

</RelativeLayout>
