<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="androidhive.info.materialdesign.activity.FoodDetailsActivitySearch.FoodDetailsFragment">

    <TextView
        android:id="@+id/activity_food_details_home_textview_foodsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30dp"
        android:textStyle="italic"
        />
    <TextView
        android:id="@+id/activity_food_details_home_textview_foodsNutrients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/activity_food_details_home_textview_foodsName"
        android:layout_marginTop="20dp"
        android:textColor="@color/textColorPrimary"
        android:textSize="30dp"
        />

    <TextView
        android:id="@+id/food_details_textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/activity_food_details_home_deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_food_details_home_textview_foodsNutrients"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:text=" Delete "
        android:onClick="deleteFood"
        />

</RelativeLayout>